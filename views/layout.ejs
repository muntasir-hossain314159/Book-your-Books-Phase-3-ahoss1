                            <% } else { %>
                                <li class="nav-item ms-2">
                                    <a class="nav-link toggle-item" href="/sign_in">Sign in</a>
                                </li> 
                            <% } %>      
                        </ul>    
                    </div>   
                </div>                    
            </nav>
        </header>

